<dl class="portlet portletCarouselWrapper"
    tal:define="hide_controls view/data/hide_controls | nothing;
                timer view/data/timer | python:10000"
    i18n:domain="collective.carousel">

  <dt class="portletHeader"
      tal:attributes="class python:view.hideHeader() and 'portletHeader hiddenStructure' or 'portletHeader'">
    <a href="#" class="tile" tal:content="view/data/title" />
  </dt>

  <dd class="carousel portletItem" tal:condition="view/results">
    <div class="toolBar" tal:condition="python:view.canSeeEditLink()">
      <a href="#" title="Edit carousel's results"
          tal:attributes="href python:view.editCarouselLink()"
          i18n:attributes="title">Edit Carousel</a>
    </div>

    <div id="carousel-example-generic" class="carousel slide">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <tal:block tal:repeat="item view/results">
        <div class="item active"
            tal:define="item_object item/getObject;
                        image_scale view/data/image_scale|nothing; dummy python:view.request.set('carousel_image_scale', image_scale);">
          <tal:block replace="structure python:view.get_tile(item_object)" />
        </div>
        </tal:block>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"
         title="Previous item" i18n:attributes="title label_previous_item" tal:condition="not:hide_controls">
        <span class="icon-prev" i18n:translate="label_previous_item">Previous item</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"
        title="Next item" tal:condition="not:hide_controls" i18n:attributes="title label_next_item">
        <span class="icon-next" i18n:translate="label_next_item">Next item</span>
      </a>
    </div>

  </dd>
</dl>
